---
import LeftSideBar from '../components/LeftSideBar.astro';
import DocsNav from '../components/DocsNav.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="shortcut icon" href="/logo.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<DocsNav />
        <div class="flex-col md:flex-row flex max-w-7xl mx-auto pt-12">
            <aside class="relative min-h-0 flex flex-col px-4 lg:w-80 items-start">
                <LeftSideBar currentPage={Astro.url.pathname} />
            </aside>
            <div class="flex-1 px-8 markdown max-w-2xl">
                <slot />
            </div>
        </div>
	</body>
</html>


<style is:global>
pre {
    @apply -mx-6 p-6 mb-12 rounded-lg bg-gray-900 !important;
}

pre code {
    font-size: .8rem;
    font-weight: 500;
    line-height: 1.9;
    @apply bg-gray-900 px-0 !important;
}

code {
    font-size: .8rem;
    font-weight: 500;
    line-height: 1.9;
    @apply bg-gray-100 text-purple-600 px-2 py-1;
}

.markdown p {
    @apply text-base mb-6 leading-[1.8em] text-gray-800;
}

.markdown h1 {
    @apply text-[2.5em] mb-8 font-medium text-black;
}

.markdown ul {
    @apply list-disc list-inside mb-6;
}

.markdown blockquote {
    @apply -mx-6 p-6 mt-10 mb-12 bg-blue-50 border-l-4 border-blue-600 !important;
}
.markdown blockquote > p:last-of-type {
    @apply mb-0 !important;
}

.markdown h2 {
    @apply text-3xl mt-20 mb-8 font-medium text-gray-900;
}

.markdown h3 {
    @apply text-2xl mb-4 font-semibold text-gray-900;
}

.markdown img {
    @apply mb-6 w-full mx-auto rounded-lg;
}

.markdown a {
    @apply font-medium text-blue-700;
}
</style>