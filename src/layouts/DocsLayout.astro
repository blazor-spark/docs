---
import LeftSideBar from '../components/LeftSideBar.astro';
import DocsNav from '../components/DocsNav.astro';
import Footer from '../components/Footer.astro';
import StayUpdated from '../components/StayUpdated.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="shortcut icon" href="/logo.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<DocsNav />
        <div class="flex-col md:flex-row flex px-2 max-w-7xl mx-auto pt-12 pb-12">
            <aside class="relative min-h-0 flex flex-col px-4 lg:w-80 items-start">
                <LeftSideBar currentPage={Astro.url.pathname} />
            </aside>
            <div class="flex-1 px-8 markdown max-w-3xl">
                <slot />
            </div>
        </div>
		<StayUpdated />
		<Footer />
	</body>
</html>


<style is:global>
.markdown h1 {
    @apply text-4xl sm:text-5xl mb-8 font-bold text-gray-800;
}

.markdown p {
    @apply text-lg mb-6 leading-[1.8em] text-gray-800;
}

.markdown ul {
    @apply list-disc list-inside mb-6 ml-4 space-y-2;
}

.markdown blockquote {
    @apply -mx-6 p-6 mt-10 mb-12 bg-blue-50 border-l-4 border-blue-600 !important;
}
.markdown blockquote > p:last-of-type {
    @apply mb-0 !important;
}

.markdown h2 {
    @apply text-3xl sm:text-4xl mt-20 mb-8 font-bold text-gray-800;
}

.markdown h3 {
    @apply text-xl mb-4 font-bold text-gray-800;
}

.markdown img {
    @apply mb-6 w-full mx-auto rounded-lg ;
}

.markdown a {
    @apply font-bold text-lg text-purple-700 border-b-2 border-purple-700;
}
pre {
    @apply -mx-6 py-6 px-2 mb-12 rounded-lg bg-gray-900 overflow-x-auto !important;
}

pre code {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.9;
    @apply bg-gray-900 px-0 border-none text-sm sm:text-base !important;
}

code {
    font-size: .9rem;
    font-weight: 500;
    line-height: 1.9;
    @apply bg-gray-100 border border-gray-400 text-purple-800 px-2 py-1 rounded;
}
pre code .line {
    /* padding-left: 1rem;
    padding-right: 1rem;
    border-left-width: 3px;
    border-left-style: solid;
    border-left-color: transparent; */
    line-height: 2;
    @apply py-1 pr-2;
}

.highlighted {
    background-color: rgb(117, 255, 149, .3);
    /* border-left-color: #7beea4 !important;
    border-left-width: 3px;
    border-left-style: solid; */
}

code > .line.highlighted::before {
  content: "+";
  color:#7beea4 !important;
  /* Other styling */
  display: inline-block;
  width: 1rem;
  text-align: left;
  margin-left: .5rem;
}
code > .line::before {
  content: "";
  /* Other styling */
  display: inline-block;
  width: 1rem;
  text-align: left;
  margin-left: .5rem;
}
[data-rehype-pretty-code-title] {
    @apply bg-gray-900 w-fit px-4 py-1 rounded-t-lg text-yellow-200 border-b border-b-gray-700;
}
</style>